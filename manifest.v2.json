{
    "name": "Waarom",
    "manifest_version": 2,
    "permissions": [
        "tabs"
    ],
    "content_scripts": [{
        "matches": [
            "https://wol.jw.org/*/wol/meetings/*",
            "https://elvisoliveira.github.io/jwpub/"
        ],
        "js": ["content.bundle.js"]
    }],
    "browser_action": {
        "default_popup": "popup.html",
        "browser_style": true
    }
}